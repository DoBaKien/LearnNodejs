<div class="mt-4">
    <h3>Update</h3>
    <form method="post" action="/courses/{{courses._id}}?_method=PUT">
        <div class="form-group">
            <label for="name">Tên</label>
            <input type="text" class="form-control" value="{{courses.name}}" id="name" name="name" />
        </div>
        <div class="form-group">
            <label for="description">Mô tả</label>
            <input type="text" class="form-control" value="{{courses.description}}" id="description"
                name="description" />
        </div>
        <div class="form-group">
            <label for="videoid">image</label>
            <input type="text" class="form-control" value="{{courses.image}}" id="image" name="image" />
        </div>

        <button type="submit" class="btn btn-primary">Update</button>
    </form>
</div>